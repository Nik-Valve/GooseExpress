<Window x:Class="GooseExpress.Wind.OrderStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GooseExpress.Wind" xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="OrderStatus" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                        BorderThickness="1"
                        Padding="4,2" 
                        CornerRadius="5" 
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{x:Null}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="HoverUnderlineStyleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="TextBlock">
                        <ContentPresenter Content="{TemplateBinding  Content}" ContentTemplate="{TemplateBinding  ContentTemplate}"/>
                        </TextBlock>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="TextBlock" Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="HoverUnderlineStyleButtonNone">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="TextBlock">
                        <ContentPresenter Content="{TemplateBinding  Content}" ContentTemplate="{TemplateBinding  ContentTemplate}"/>
                        </TextBlock>
                        <ControlTemplate.Triggers>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/MainBack.png" 
                        Stretch="UniformToFill"/>
        </Grid.Background>
        <Button
            x:Name="btnreturn"
            HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="10,0,0,0"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Style="{StaticResource MyButtonStyle}"
            Click="btnreturn_Click">
            <Image Width="30" Height="30"
                   Source="/Image/2 (1).png"
               />
        </Button>
        <Button
            x:Name="btnSetting"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,10,0"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Style="{StaticResource MyButtonStyle}"
            Click="btnSetting_Click">
            <Image Width="30" Height="30" Source="/Image/free-icon-setting-3288743.png">
            </Image>
        </Button>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,0">
            <Button
                Style="{StaticResource HoverUnderlineStyleButton}"
                Width="100"
                Height="25"
                FontSize="18"
                Foreground="White"
                Click="Button_Click"
                Margin="30,0,0,0">
                <Button.Content>
                    <TextBlock x:Name="Main">
                        Главная
                    </TextBlock>
                </Button.Content>
            </Button>
            <Button
                Style="{StaticResource HoverUnderlineStyleButton}"
                FontSize="18"
                Width="100"
                Height="25"
                Foreground="White"
                Click="Button_Click_1"
                Margin="30,0,0,0">
                <TextBlock x:Name="Feedback">
                        Отзывы
                </TextBlock>
            </Button>
            <Button
                Style="{StaticResource HoverUnderlineStyleButtonNone}"
                FontSize="18"
                Width="150"
                Height="25"
                Foreground="White"
                Click="Button_Click_4"
                Margin="30,0,0,0">
                <TextBlock x:Name="Order">
                    Состояние заказа
                </TextBlock>
            </Button>
            <Button
                Style="{StaticResource HoverUnderlineStyleButton}"
                FontSize="18"
                Width="100"
                Height="25"
                Foreground="White"
                Click="Button_Click_2"
                Margin="30,0,0,0">
                <TextBlock x:Name="Company">
                    О компании
                </TextBlock>
            </Button>
            <Button
                Style="{StaticResource HoverUnderlineStyleButton}"
                FontSize="18"
                Width="150"
                Height="25"
                Foreground="White"
                Click="Button_Click_3"
                Margin="30,0,0,0">
                <TextBlock x:Name="History">
                    История заказов
                </TextBlock>
            </Button>
        </StackPanel>
        <DockPanel
            Grid.Row="2">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Button x:Name="ButtonGo"
                            DockPanel.Dock="Right" 
                            Click="ButtonGo_Click" 
                            Content="Найти заказ"/>
                    <TextBox Name = "addressBar"/>
                </DockPanel>
                <wv2:WebView2 Name = "webView"
                  Source = "https://www.microsoft.com"
    />
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
